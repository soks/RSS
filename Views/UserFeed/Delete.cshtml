@model RSS.Models.UserFeed
@{
    ViewBag.Title = "Delete";
}
<div id="foobar">
    <div id="col1">
        <br />
    </div>
    <div id="col2">
        <div class="viewer">
            <div class="reel">
                <div class="slide">
                    <h2>
                        Delete</h2>
                    <h3>
                        Are you sure you want to delete this?</h3>
                    <fieldset>
                        <legend>UserFeed</legend>
                        <div class="display-label">
                            User</div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.User.UserName)
                        </div>
                        <div class="display-label">
                            IsPublic</div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.IsPublic)
                        </div>
                        <div class="display-label">
                            IsFavourite</div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.IsFavourite)
                        </div>
                        <div class="display-label">
                            Filter</div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.Filter.FilterText)
                        </div>
                    </fieldset>
                    @using (Html.BeginForm())
                    {
                        <p>
                            <input type="submit" value="Delete" />
                            |
                            @Html.ActionLink("Back to List", "Index")
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div id="col3">
    <br />
</div>
